{
  "name": "monadao",
  "version": "1.0.0",
  "private": true,
  "description": "MonaDAO - Decentralized Autonomous Organization on Monad",
  "workspaces": [
    "contracts"
  ],
  "scripts": {
    "dev": "echo 'Frontend has been removed. Use contracts only.'",
    "build": "npm run build --workspace=contracts",
    "test": "npm run test --workspace=contracts",
    "lint": "npm run lint --workspace=contracts",
    "clean": "rm -rf node_modules && npm run clean --workspace=contracts",
    "contracts:compile": "npm run compile --workspace=contracts",
    "contracts:test": "npm run test --workspace=contracts",
    "contracts:deploy": "npm run deploy --workspace=contracts",
    "frontend:dev": "npm run dev --workspace=frontend",
    "frontend:build": "npm run build --workspace=frontend",
    "prepare": "husky install"
  },
  "keywords": [
    "dao",
    "monad",
    "blockchain",
    "governance",
    "defi"
  ],
  "author": "MonaDAO Team",
  "license": "MIT",
  "devDependencies": {
    "prettier": "^3.3.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ],
    "*.sol": [
      "prettier --write"
    ]
  }
}
